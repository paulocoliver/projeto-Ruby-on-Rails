<%= form_for(@selo) do |f| %>
  <% if @selo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@selo.errors.count, "error") %> prohibited this selo from being saved:</h2>

      <ul>
      <% @selo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="field">
    <%= f.label :numero %><br />
    <%= f.text_field :numero %>
  </div>
  
  <div class="field">
    <%= f.label :tipo %><br />
	<select id="selo_tipo" name="selo[tipo]" required="required">
		<% ['Plastico','Adesivo'].each do |tipo| %>
			<option value="<%= tipo%>" <%= @selo.tipo == tipo ? selected="selected" : "" %> ><%= tipo%></option>
		<% end %>
	</select>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
