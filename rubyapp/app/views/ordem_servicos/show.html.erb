		<label for="cronotacografo_modelo">Modelo</label>
		<input id="cronotacografo_modelo" name="cronotacografo_modelo" type="text" disabled="true" value="<%= @ordem_servico.cronotacografo_modelo %>" style="width: 100px;"/>
		
		<label for="cronotacografo_num_serie">Nº. Série</label>
		<input id="cronotacografo_num_serie" name="cronotacografo_modelo" type="text" disabled="true" value="<%= @ordem_servico.cronotacografo_num_serie %>" style="width: 100px;"/>
		
		<label for="cronotacografo_constante_k">Constante K</label>
		<input id="cronotacografo_constante_k" name="cronotacografo_constante_k" type="text" disabled="true" value="<%= @ordem_servico.cronotacografo_constante_k %>" style="width: 73px;"/>
		
		<label for="cronotacografo_km">KM</label>
		<input id="cronotacografo_km" name="cronotacografo_km" type="text" disabled="true" value="<%= @ordem_servico.cronotacografo_km %>" style="width: 70px;"/>
		
