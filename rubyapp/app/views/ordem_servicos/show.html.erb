		<input id="cliente_cep" name="cliente_cep" type="text" disabled="true" value="<%= @ordem_servico.cliente_cep %>" style="width:152px;"/>
		
		<label for="cliente_email">Email</label>
		<input id="cliente_email" name="cliente_email" type="text" disabled="true" value="<%= @ordem_servico.cliente_email %>" style="width: 499px;"/>
		
		<label for="cliente_fone">Fone</label>
		<input id="cliente_fone" name="cliente_fone" type="text" disabled="true" value="<%= @ordem_servico.cliente_fone %>" />
		
		<label for="veiculo_placa">Placa</label>
		<input id="veiculo_placa" name="veiculo_placa" type="text" disabled="true" value="<%= @ordem_servico.veiculo_placa%>" style="width: 137px;"/>
		
		<label for="veiculo_marca">Marca</label>
		<input id="veiculo_marca" name="veiculo_marca" type="text" disabled="true" value="<%= @ordem_servico.veiculo_marca%>" style="width: 137px;"/>
		
		<label for="veiculo_modelo">Modelo</label>
		<input id="veiculo_modelo" name="veiculo_modelo" type="text" disabled="true" value="<%= @ordem_servico.veiculo_modelo%>" style="width: 137px;"/>
		
		<label for="veiculo_ano">Ano</label>
		<input id="veiculo_ano" name="veiculo_ano" type="text" disabled="true" value="<%= @ordem_servico.veiculo_ano%>" style="width: 137px;"/>
		
		<label for="veiculo_chassi">Chassi</label>
		<input id="veiculo_chassi" name="veiculo_chassi" type="text" disabled="true" value="<%= @ordem_servico.veiculo_chassi%>" style="width: 130px;"/>
		
		<label for="veiculo_renavam">RENAVAM</label>
		<input id="veiculo_renavam" name="veiculo_renavam" type="text" disabled="true" value="<%= @ordem_servico.veiculo_renavam%>" style="width: 130px;"/>
		
