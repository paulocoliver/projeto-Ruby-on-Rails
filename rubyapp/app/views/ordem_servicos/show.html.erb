	<h1>Ordem de Serviço CRONOTACÓGRAFO- TCO Nº. <%= @ordem_servico.id %></h1>
	
	<div id="dados_oficina">
		<label for="oficina">Nome da Oficina</label>
		<input id="oficina" name="oficina" type="text" value="" required="true" style="width: 390px;"/>
		
		<label for="oficina_fone">Fone</label>
		<input id="oficina_fone" name="oficina_fone" type="text" value="" required="true" style="width: 190px;"/>
		
		<label for="oficina_endereco">Endereco</label>
		<input id="oficina_endereco" name="oficina_endereco" type="text" value="" required="true" style="width:263px"/>
		
		<label for="oficina_estado">Estado</label>
	    <%= collection_select( :estado, :id, Estado.all, :id, :descricao, :prompt => true) %>
	 
		<label for="oficina_cidade">Cidade</label>
		<select id="cidade" name="cidade" required="required"></select>
	</div>

	<div id="dados_veiculo">
		
		<h2>Identificação do veículo</h2> 
		
		<label for="cliente_nome">Cliente</label>
		<input id="cliente_nome" name="cliente_nome" type="text" disabled="true" value="<%= @ordem_servico.cliente_nome %>" style="width: 380px;"/>
		
		<label for="cliente_documento">CPF/CNPJ</label>
		<input id="cliente_documento" name="cliente_documento" type="text" disabled="true" value="<%= @ordem_servico.cliente_documento %>" style="width: 227px;" />
		
		<label for="cliente_uf">UF</label>
		<input id="cliente_uf" name="cliente_uf" type="text" disabled="true" value="<%= @ordem_servico.cliente_uf %>" style="width: 120px;" />
		
		<label for="cliente_cidade">Cidade</label>
		<input id="cliente_cidade" name="cliente_cidade" type="text" disabled="true" value="<%= @ordem_servico.cliente_cidade %>" style="width:242px;"/>
		
		<label for="cliente_bairro">Bairro</label>
		<input id="cliente_bairro" name="cliente_bairro" type="text" disabled="true" value="<%= @ordem_servico.cliente_bairro %>" style="width:242px;" />
		
		<label for="cliente_endereco">Endereço</label>
		<input id="cliente_endereco" name="cliente_endereco" type="text" disabled="true" value="<%= @ordem_servico.cliente_endereco %>" style="width: 476px;"/>
		
